<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:EZShellSample"
    x:Class="EZShellSample.DetailsModalPage">
    <ContentPage.BindingContext>
        <vm:DetailsModalViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Spacing="15" Margin="30,100,30,30">
            <Label Text="Details Modal Page!" FontSize="42" HorizontalOptions="Center"/>
            <Label Text="{Binding Value}" HorizontalOptions="Center"/>
            <Button Text="Close" Command="{Binding CloseCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
