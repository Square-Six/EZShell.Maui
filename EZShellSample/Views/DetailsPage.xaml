<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:EZShellSample"
    Shell.NavBarIsVisible="True"
    Title="Details"
    x:Class="EZShellSample.DetailsPage">
    <ContentPage.BindingContext>
        <vm:DetailsViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Details Page!" FontSize="42" HorizontalOptions="Center"/>
            <Label Text="{Binding Value}" HorizontalOptions="Center"/>
            <Button Text="Push" Command="{Binding PushCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
