<?xml version="1.0" encoding="UTF-8" ?>
<ez:EZShellContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:EZShellSample"
    xmlns:ez="clr-namespace:EZShell;assembly=EZShell"
    ViewModelType="{x:Type vm:DetailsViewModel}"
    Shell.NavBarIsVisible="True"
    Title="Details"
    x:Class="EZShellSample.DetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Details Page!" FontSize="42" HorizontalOptions="Center"/>
            <Label Text="{Binding Value}" HorizontalOptions="Center"/>
            <Button Text="Push" Command="{Binding PushCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ez:EZShellContentPage>
